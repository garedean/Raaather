<h1 class="page-header text-center">Would you rather?</h1>

<% content_for :new_rather do %>
  <%= link_to "Ask", new_rather_path %>
<% end %>

<div class="col-sm-12">
  <ul class="rathers-wrapper">
    <% @rathers.each.sort.each do |rather| %>

      <li class="rathers-row rather_<%= rather.id %>">
        <div class="row">
          <%= link_to "Add Comment", new_rather_comment_path(rather),class:"add-comment" %>
          <div class="col-sm-7">
            <div class="row">

              <h3>Would you rather...</h3>

              <div class="col-xs-5">

                <span class="choice_<%= rather.first_choice.id %>">
                  <%= rather.first_choice.votes %>
                </span> votes

                <%= link_to rather_choice_path(rather, rather.choices[0]), method: "patch", remote: true do %>

                  <div class="choice-wrapper well active">
                    <%= image_tag "http://lorempixel.com/g/200/200", class:"choice-pic" %>

                    <span class="description">
                      <%= rather.choices[0].text %>
                    </span>
                  </div>

                  <span class="choice_percentage">
                    <%= rather.choices[0].get_percentage %>%
                  </span>

                <% end %>
              </div>

              <div class="col-xs-2">
                <p class="or-divider">OR</p>
              </div>

              <div class="col-xs-5">

                <span class="choice_<%= rather.second_choice.id %>">
                  <%= rather.second_choice.votes %>
                </span> votes

                <%= link_to rather_choice_path(rather, rather.choices[1]), method: "patch", remote: true do %>
                <div class="choice-wrapper well">
                  <%= image_tag "http://lorempixel.com/g/200/200", class:"choice-pic" %>

                  <span class="description">
                    <%= rather.choices[1].text %>
                  </span>
                </div>

                <span class="choice_percentage">
                  <%= rather.choices[1].get_percentage %>%
                </span>

                <% end %>

              </div>

            </div>
          </div>

          <%= render "comment_section", rather: rather %>

        </div>
      </li>
    <% end %>
  </ul>
</div>
