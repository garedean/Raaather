<% content_for :new_rather do %>
  <%= link_to "Add", new_rather_path, class: "pull-right" %>
<% end %>

<div class="col-sm-12">
  <ul class="rathers-wrapper">
    <% @rathers.each.sort.each do |rather| %>

      <li class="rathers-row rather_<%= rather.id %>">
        <div class="row">
          <%= link_to "Add Comment", new_rather_comment_path(rather),class:"add-comment" %>
          <div class="col-sm-7">
            <div class="row">

              <h3>Would you rather...</h3>

              <div class="col-xs-5">

                <span class="choice_one_votes">
                  <%= rather.choices[0].votes %>
                </span> votes

                <%= image_tag "http://lorempixel.com/g/200/200", class:"choice-pic" %>

                <%= rather.choices[0].text %>

                <%#= link_to "Vote", (rather, Choice.find(1)) %>

              </div>

              <div class="col-xs-2">
                <p class="or-divider">OR</p>
              </div>

              <div class="col-xs-5">

                <span class="choice_two_votes">
                  <%= rather.choices[1].votes %>
                </span> votes

                <%= image_tag "http://lorempixel.com/g/200/200", class:"choice-pic" %>

                <%= rather.choices[1].text %>

              </div>

            </div>
          </div>

          <div class="col-sm-5">
            <h4>Comments</h4>

            <ul>
            <% rather.comments.each do |comment| %>
              <%= comment.body %>
            <% end %>

          </ul>


          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
